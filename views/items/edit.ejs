<%- include ('../partials/header.ejs') %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">create a new item</h1>
    <div style="width:30%; margin: 20px auto;">
        <form action="/items/<%= item._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="item[item_name]" value="<%= item.item_name %>">
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="item[image_url]" value="<%= item.image_url %>">
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="imte[type]" value="<%= item.type %>">
          </div>
          <div class="form-group">
              <input class="form-control" type="text" name="item[description]" value="<%= item.description %>">
          </div>
          <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/items">Go back</a>
    </div>
  </div>
</div>
<%- include ('../partials/footer.ejs') %>