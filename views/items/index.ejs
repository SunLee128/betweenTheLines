<%- include ('../partials/header.ejs') %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Between the Lines</h1>
      <p>Get more insights of your reviews</p>
      <p>
        <a class="btn btn-primary btn-large" href="/items/new">add new items to review</a>
      </p>
    </div>
  </header>
  
  <div class="row">
    <div class="col-lg-12">
      <h3>Our popualr items</h3>
    </div>
  </div>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% items.forEach(function(item){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= item.image_url %>" alt="">
          <div class="caption">
            <h4><%= item.item_name %></h4>
          </div>
          <p>
            <a href="/items/<%= item._id%>" class="btn btn-primary">Reviews</a>
          </p>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include ('../partials/footer.ejs') %>